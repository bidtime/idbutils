<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    
    <context:property-placeholder location="classpath:appConfig.properties"
		ignore-unresolvable="true"/>
                                  
    <bean id="globalParams" class="org.bidtime.utils.file.GlobalParams"
          init-method="init" lazy-init="false">
        <!-- 静态资源如图片等的url -->
        <property name="webUrl" value="${webUrl}"/>
        <property name="webRoot" value="${webRoot}"/>
    </bean>
    
    <bean id="jsonFieldXmlsLoader" class="org.bidtime.dbutils.jdbc.sql.xml.JsonFieldXmlsLoader"
          init-method="init" lazy-init="false">
        <property name="packageRoot" value="org.bidtime.basicdata"/>
        <property name="extName" value=".xml"/>
        <property name="recursive" value="true"/>
    </bean>

	<context:component-scan base-package="org.bidtime.basicdata" />

</beans>
